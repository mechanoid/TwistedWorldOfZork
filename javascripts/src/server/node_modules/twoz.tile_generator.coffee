config = require('twoz.config')

class TileGenerator
  constructor: ->
    # . -> green
    # T -> tree
    # R -> rock
    # F -> field
    @tiles = '..................................TTTTRRRRFFFF'.split('')

  pick: ->
    @tiles[Math.floor(Math.random() * @tiles.length)]


  generate_row: ->
    (@pick() for num in [0..config.tile_size]).join('')

  build: ->
    # a tile is a list of rows
    (@generate_row() for num in [0..config.tile_size])

module.exports = new TileGenerator()